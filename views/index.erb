<h1>All Transactions</h1>
<table class="transactions">
    <tr>
      <th>Value</th>
      <th>Type</th>
      <th>Merchant</th>
      <th>Delete</th>
    </tr>

    <% @transactions.each do |transaction| %>
      <tr>
        <td>Â£<%= transaction.value %></td>
        <td>
          <a href="/transactions/total_by_tag/<%= transaction.tag.id %>">
            <%= transaction.tag.name %>
          </a>
