<div class="form-centered">

<h1> Create Transaction </h1>

<form method="post" action="/transactions">

  <div class="field-group">
    <label for="-field" class="label">Merchant:</label>
    <div class="field">
      <select name="merchant_id">
        <% @merchants.each do |merchant| %>
        <option value="<%= merchant.id %>"><%= merchant.merchant_name %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="field-group">
    <label for="-field" class="label">Transaction Type:</label>
    <div class="field">
      <select name="tag_id">
        <% @tags.each do |tag| %>
        <option value="<%= tag.id %>"><%= tag.name %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="field-group">
    <label for="-field" class="label">Amount:</label>
    <div class="field">
      <input
      type="text"
      name="value"
      id="value-name-field"
      placeholder="amount"
      required
      />
    </div>
  </div>


  <input type ="hidden" name="_method" value="update"/>
  <button class="button2" type="submit">Create</button>



</form>

</div>


<div>
  <img src="/images/p4.jpeg" alt="Image bank">
</div>
