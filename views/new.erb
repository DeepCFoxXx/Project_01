<form method="post" action="/transactions">

  <div class="field-group">
    <label for="-field" class="label">Merchant:</label>
    <div class="field">
      <select>
        <% @merchants.each do |merchant| %>
            <option value="<%= merchant.id %>"><%= merchant.merchant_name %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="field-group">
    <label for="-field" class="label">Transaction Type:</label>
    <div class="field">
      <select>
        <% @tags.each do |tag| %>
            <option value="<%= tag.id %>"><%= tag.name %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="field-group">
    <label for="-field" class="label">Amount:</label>
    <div class="field">
      <input
      type="text"
      name="value"
      id="value-name-field"
      placeholder="amount"
      required
      />
    </div>
  </div>

  <button type="submit">Create</button>

  <div>
    <a class="button big-button" href="/">Home</a>
  </div>

</form>
